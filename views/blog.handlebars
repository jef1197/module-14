<div class=" post-container">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>By {{user.username}} on {{date}}</p>
</div>

<div class="comment-list">
<h3>Comments </h3>
{{#each comments as |comment|}}
  <div class="comment-card">
      <p>{{comment.content}}</p>
      <p>{{comment.user.username}} {{comment.date}}</p>
      <p></p>
  </div>
{{/each}}
{{#if logged_in}}
  <button class="btn btn-info" id="addComments"> + Add Comment</button>
{{/if}}
  <div class="comment-container hidden">
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-comment">Comment:</label>
        <input class="form-input" type="text" id="post-comment" name="post-comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
        <button type="button" id="cancel-form" class="btn btn-secondary">Cancel</button>
      </div>
    </form>
  </div>
</div>



<script src="../js/blog.js"></script>

