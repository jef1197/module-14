<div class="post-container">
  <h2>Update</h2>
  <form class="form new-put-form">
    <div class="form-group">
      <label for="put-title">Title: </label>
      <input class="form-input" type="text" id="put-title" name="put-title" value="{{title}}"/>
    </div>
    <div class="form-group">
      <label for="put-content">Content:</label>
      <textarea rows="4" class="form-input" id="post-content" name="post-content">{{content}}</textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Update</button>
      <a type="button" href="/profile" id="cancel-form" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>

<script src="../js/update.js"></script>
