<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post post-container">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <b>{{post.user.username}}</b>
    <p>{{format_date post.date}}</p>
  </div>
  <div class="col-md-7 post-content">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
