<div class="row mt-4">
  <div class="col-md-12 post-list">
    <h2>Current Posts</h2>
    {{#each posts as |post|}}
    <div class="row post-card">
      <div class="col-md-10">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="">
        <a class="btn btn-sm btn-link" href="/update/{{post.id}}" id="updateBtn">Update</a>
        <button class="btn btn-sm btn-danger" id="deleteBtn" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<div class="form-container hidden">
  <h2>Create New Blog Post</h2>
  <form class="form new-post-form">
    <div class="form-group">
      <label for="post-title">Title: </label>
      <input class="form-input" type="text" id="post-title" name="post-title" />
    </div>
    <div class="form-group">
      <label for="post-content">Content:</label>
      <textarea rows="4" class="form-input" id="post-content" name="post-content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
      <button type="button" id="cancel-form" class="btn btn-secondary">Cancel</button>
    </div>
  </form>
</div>

<input type="button" value="+ New Post"  class=" btn btn-info post-btn" id="newPost" />

<script src="./js/profile.js"></script>

